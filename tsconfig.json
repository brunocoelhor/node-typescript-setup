{
  "compilerOptions": {
    "target": "es2017",                            
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                                                                   
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    //Se os paths não funcionarem tem que instalar "yarn add tsconfig-path -D"
    //// caso os paths não funcioarem adicionar -r tesconfig-path/register no dev:
    "paths": {
      "@controlellers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
